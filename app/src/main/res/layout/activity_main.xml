<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mobile.zenus.paypall.MainActivity">

    <LinearLayout
        android:id="@+id/wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <Button
            android:id="@+id/buyItBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:onClick="onBuyPressed"
            style="@style/botaoEstilo"
            android:text="Comprar" />

        <Button
            android:id="@+id/futurePaymentBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:alpha="0.5"
            android:enabled="false"
            style="@style/botaoEstilo"
            android:onClick="onFuturePaymentPressed"
            android:text="Outras Opções Futuras" />

        <Button
            android:id="@+id/futurePaymentPurchaseBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:alpha="0.5"
            android:enabled="false"
            android:text="Outras opções"
            style="@style/botaoEstilo"
            android:onClick="onFuturePaymentPurchasePressed"
            />

        <Button
            android:id="@+id/profileSharingBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:alpha="0.5"
            android:enabled="false"
            android:onClick="onProfileSharingPressed"
            style="@style/botaoEstilo"
            android:text="Outras opções 2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:alpha="0.5"
            android:enabled="false"
            android:text="Outras Opções 3"

            android:id="@+id/txtResult" />
    </LinearLayout>

</RelativeLayout>
